<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.32/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/manage-lines.css">
</head>
<body>
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <img src="/image/Logo sanoh 2 2.png" alt="Sanoh Logo" class="logo-img">
                    <h1 class="dashboard-title">Andon Dashboard</h1>
                </div>
                <div class="status-info">
                    <div class="top-row-info">
                        <div class="user-info">
                            <i class="fas fa-user"></i>
                            <span><%= user.name %></span>
                        </div>
                        <div class="nav-links"> 
                            <% if (user.role === 'admin' || user.role === 'management') { %>
                                <a href="/divisions" class="analytics-link" title="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                                <a href="/plc-monitoring" class="analytics-link" title="PLC">
                                    <i class="fas fa-network-wired"></i>
                                    <span>PLC</span>
                                </a>
                                <a href="/users" class="analytics-link" title="Users">
                                    <i class="fas fa-users-cog"></i>
                                    <span>Users</span>
                                </a>
                                <a href="/manage-lines" class="analytics-link" title="Lines">
                                    <i class="fas fa-sitemap"></i>
                                    <span>Lines</span>
                                </a>
                                <a href="/inspect-tables" class="analytics-link" title="Tables">
                                    <i class="fas fa-table"></i>
                                    <span>Tables</span>
                                </a>
                            <% } %>
                        </div>
                        <form method="POST" action="/logout" style="display: inline;">
                            <button type="submit" class="logout-btn" title="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </div>
                    <div class="bottom-row-status">
                        <div class="connection-status" id="connectionStatus">
                            <i class="fas fa-wifi"></i>
                            <span>Connected</span>
                        </div>
                        <div class="current-time">
                            <span id="currentTime">--:--:--</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="dashboard-main">
        <div class="container">
            <div class="page-header">
                <h2><i class="fas fa-sitemap"></i> Manage Lines</h2>
                <p>Kelola divisi dan line dalam sistem</p>
            </div>

            <!-- Add Division Form -->
            <div class="form-container">
                <h3>Tambah Divisi Baru</h3>
                <form id="addDivisionForm">
                    <input type="text" name="name" placeholder="Nama Divisi" required>
                    <button type="submit" title="Tambah Divisi">
                        <i class="fas fa-plus"></i>
                    </button>
                </form>
            </div>

            <!-- Divisions List -->
            <div class="divisions-list" id="divisionsList">
                <div class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Memuat data divisi dan line...</p>
                </div>
            </div>
        </div>
    </main>

    <!-- Edit Division Modal -->
    <div id="editDivisionModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Divisi</h3>
                <span class="close" id="closeEditDivision">&times;</span>
            </div>
            <form id="editDivisionForm">
                <input type="hidden" id="editDivisionId">
                <div class="form-group">
                    <label>Nama Divisi</label>
                    <input type="text" id="editDivisionName" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-cancel" id="cancelEditDivision" title="Batal">
                        <i class="fas fa-times"></i>
                    </button>
                    <button type="submit" class="btn-submit" title="Simpan">
                        <i class="fas fa-check"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Line Modal -->
    <div id="addLineModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Tambah Line Baru</h3>
                <span class="close" id="closeAddLine">&times;</span>
            </div>
            <form id="addLineForm">
                <input type="hidden" id="addLineDivisionId">
                <div class="form-group">
                    <label>Nama Line</label>
                    <input type="text" id="addLineName" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-cancel" id="cancelAddLine" title="Batal">
                        <i class="fas fa-times"></i>
                    </button>
                    <button type="submit" class="btn-submit" title="Tambah">
                        <i class="fas fa-check"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Line Modal -->
    <div id="editLineModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Line</h3>
                <span class="close" id="closeEditLine">&times;</span>
            </div>
            <form id="editLineForm">
                <input type="hidden" id="editLineId">
                <div class="form-group">
                    <label>Divisi</label>
                    <select id="editLineDivisionId" required></select>
                </div>
                <div class="form-group">
                    <label>Nama Line</label>
                    <input type="text" id="editLineName" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-cancel" id="cancelEditLine" title="Batal">
                        <i class="fas fa-times"></i>
                    </button>
                    <button type="submit" class="btn-submit" title="Simpan">
                        <i class="fas fa-check"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/header-common.js"></script>
    <script src="/js/manage-lines.js"></script>
    <script>
        // Hide Lines link on manage-lines page
        document.querySelectorAll('.analytics-link[href="/manage-lines"]').forEach(link => {
            link.style.display = 'none';
        });
    </script>
</body>
</html>

