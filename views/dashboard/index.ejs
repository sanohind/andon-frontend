<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.32/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/ticketing.css">
    <style>
        /* Ensure body and html are always visible */
        html, body {
            visibility: visible !important;
            display: block !important;
            opacity: 1 !important;
        }
    </style>
</head>
<body style="visibility: visible; display: block; opacity: 1;">
    <div id="userData" data-role="<%= user.role %>" data-line="<%= user.line_name || '' %>" data-division="<%= user.division || '' %>" style="display: none;"></div>
    <%
        const flatMachines = [];
        Object.keys(machinesByLine || {}).forEach(lineKey => {
            (machinesByLine[lineKey] || []).forEach(machine => {
                flatMachines.push({
                    name: machine.name,
                    line_name: machine.line_name,
                    address: machine.address || null
                });
            });
        });
    %>
    <div id="dashboardData" data-machines='<%- JSON.stringify(flatMachines) %>' style="display: none;"></div>
    
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <img src="/image/Logo sanoh 2 2.png" alt="Sanoh Logo" class="logo-img">
                    <h1 class="dashboard-title">Andon Dashboard</h1>
                </div>
                <div class="status-info">
                    <div class="top-row-info"> 
                        <div class="user-info">
                            <i class="fas fa-user"></i>
                            <span><%= user.name %></span>
                        </div>
                        <div class="nav-links"> 
                            <% if (user.line_name) { %>
                                <a href="/realtime-oee?<%= new URLSearchParams({ line_name: user.line_name }).toString() %>" class="analytics-link" title="Production Monitoring">
                                    <i class="fas fa-tv"></i>
                                    <span>Production Monitoring</span>
                                </a>
                            <% } %>
                            <% if (user.role === 'manager') { %>
                                <!-- Manager hanya bisa akses Analytics -->
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                            <% } else if (user.role === 'admin' || user.role === 'management') { %>
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                                <a href="/plc-monitoring" class="analytics-link" title="PLC">
                                    <i class="fas fa-network-wired"></i>
                                    <span>PLC</span>
                                </a>
                                <a href="/users" class="analytics-link" title="Users">
                                    <i class="fas fa-users-cog"></i>
                                    <span>Users</span>
                                </a>
                                <a href="/manage-lines" class="analytics-link" title="Lines">
                                    <i class="fas fa-sitemap"></i>
                                    <span>Lines</span>
                                </a>
                                <a href="/inspect-tables" class="analytics-link" title="Tables">
                                    <i class="fas fa-table"></i>
                                    <span>Tables</span>
                                </a>
                            <% } else if (['maintenance', 'quality', 'engineering'].includes(user.role)) { %>
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                            <% } %>
                        </div>
                        <form method="POST" action="/logout" style="display: inline;">
                            <button type="submit" class="logout-btn" title="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </div>
                    <div class="bottom-row-status">
                        <div class="connection-status" id="connectionStatus">
                            <i class="fas fa-wifi"></i>
                            <span>Connected</span>
                        </div>
                        <div class="current-time">
                            <span id="currentTime">--:--:--</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="dashboard-main">
        <div class="container">
            <% if (typeof lineFilter !== 'undefined' && lineFilter && user.role !== 'leader') { %>
                <div style="margin-bottom: 1rem; display:flex; align-items:center; justify-content: space-between; gap: 0.75rem;">
                    <a href="/divisions" class="back-button" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: var(--primary-color); color: white; text-decoration: none; border-radius: 4px; font-weight: 600; transition: all 0.3s ease;">
                        <i class="fas fa-arrow-left"></i>
                        <span>Kembali ke Divisi</span>
                    </a>

                    <a href="/realtime-oee?<%= new URLSearchParams({ line_name: lineFilter }).toString() %>" class="back-button" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: #111827; color: white; text-decoration: none; border-radius: 4px; font-weight: 700; transition: all 0.3s ease;">
                        <i class="fas fa-tv"></i>
                        <span>Production Monitoring</span>
                    </a>
                </div>
            <% } %>
            <div class="stats-section" id="globalStats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-industry"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-number" id="totalMachines">0</div>
                        <div class="stat-label">Total Meja/Mesin</div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon critical">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-number" id="activeProblems">0</div>
                        <div class="stat-label">Problem Aktif</div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-number" id="resolvedToday">0</div>
                        <div class="stat-label">Resolved Hari Ini</div>
                    </div>
                </div>
                
            </div>

            <% 
                const sortedLineNumbers = Object.keys(machinesByLine).sort((a, b) => a - b);
                sortedLineNumbers.forEach(lineNumber => {
            %>
                <% 
                    const shouldDisplayLine = user.role === 'admin' || 
                                              user.role === 'management' ||
                                              user.role === 'manager' ||
                                              user.role === 'maintenance' || 
                                              user.role === 'quality' || 
                                              user.role === 'engineering' || 
                                              (user.role === 'leader' && user.line_name == lineNumber);
                %>

                <% if (shouldDisplayLine) { %>
                    <section class="line-section" data-line-number="<%= lineNumber %>">
                        <h2 class="line-header">Status Line <%= lineNumber %></h2>
                        <div class="machines-grid" id="line-<%= lineNumber %>-machines">
                            <% machinesByLine[lineNumber].forEach(machine => { %>
                                <!-- PERBAIKAN: Ubah onclick parameter agar lebih eksplisit -->
                                <div class="machine-card compact<%= machine.status === 'problem' ? ' problem' : (machine.status === 'warning' ? ' warning' : '') %>" 
                                    data-machine="<%= machine.name %>" 
                                    data-line="<%= machine.line_name %>"
                                    data-address="<%= machine.address || '' %>" 
                                    onclick="showProblemDetail('<%= machine.name %>', null, '<%= machine.line_name %>')">                                   
                                    <div class="machine-header">
                                        <h3><%= machine.name %></h3>
                                        <div class="machine-indicator">
                                            <div class="indicator-light <%= machine.status %>" id="light-<%= machine.name.replace(/ /g, '') %>-line-<%= machine.line_name %>">
                                                <div class="pulse-ring"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="machine-details">
                                        <!-- Elemen status tersembunyi untuk mendukung update real-time JS -->
                                        <div class="status-text <%= machine.status %>" id="status-<%= machine.name.replace(/ /g, '') %>-line-<%= machine.line_name %>" style="display:none;"></div>
                                        <div class="detail-item target-info">
                                            <span class="label"><i class="fas fa-bullseye"></i> Target:</span>
                                            <span class="value" id="target-<%= machine.name.replace(/ /g, '') %>-line-<%= machine.line_name %>">-</span>
                                        </div>
                                        <div class="detail-item quantity-info">
                                            <span class="label"><i class="fas fa-box"></i> Aktual:</span>
                                            <span class="value" id="quantity-<%= machine.name.replace(/ /g, '') %>-line-<%= machine.line_name %>"><%= machine.quantity !== undefined ? machine.quantity : '0' %></span>
                                        </div>
                                        <div class="detail-item oee-info">
                                            <span class="label"><i class="fas fa-percentage"></i> OEE:</span>
                                            <span class="value" id="oee-<%= machine.name.replace(/ /g, '') %>-line-<%= machine.line_name %>">-</span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </section>
                <% } %>
            <% }) %>

            <div class="problems-section">
                <h2>Daftar Problem Aktif</h2>
                <div class="problems-list" id="problemsList">
                    <div class="no-problems" id="noProblems" style="display: block;">
                        <i class="fas fa-check-circle"></i>
                        <p>Tidak ada problem aktif saat ini</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="modal" id="problemModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Detail Problem</h3>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body" id="modalBody">
                </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeModal()">Tutup</button>
                <!-- Action buttons will be dynamically added based on problem status and user role -->
            </div>
        </div>
    </div>

    <!-- Ticketing Form Modal -->
    <div class="modal" id="ticketingModal">
        <div class="modal-content ticketing-modal">
            <div class="modal-header">
                <h3>Form Ticketing Problem</h3>
                <button class="modal-close" onclick="closeTicketingModal()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="ticketingForm">
                    <input type="hidden" id="ticketingProblemId" name="problem_id">
                    
                    <div class="form-group">
                        <label for="picTechnician">PIC/Teknisi:</label>
                        <select id="picTechnician" name="pic_technician" required>
                            <option value="">Pilih Teknisi</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="diagnosis">Diagnosa/Analisis Masalah:</label>
                        <textarea id="diagnosis" name="diagnosis" rows="4" placeholder="Jelaskan diagnosa atau analisis masalah yang terjadi..." required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="problemReceivedAt">Waktu Problem Diterima:</label>
                        <input type="datetime-local" id="problemReceivedAt" name="problem_received_at" readonly style="background-color: #e9ecef; cursor: not-allowed;">
                        <small style="color: #6c757d; display: block; margin-top: 5px;">Waktu ini otomatis diisi berdasarkan waktu ketika problem di-receive</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="diagnosisStartedAt">Waktu Mulai Diagnosa:</label>
                        <input type="datetime-local" id="diagnosisStartedAt" name="diagnosis_started_at">
                    </div>
                    
                    <div class="form-group">
                        <label for="repairStartedAt">Waktu Mulai Perbaikan:</label>
                        <input type="datetime-local" id="repairStartedAt" name="repair_started_at">
                    </div>
                    
                    <!-- Waktu Selesai Perbaikan ditetapkan otomatis saat tombol Feedback ditekan -->
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeTicketingModal()">Batal</button>
                <button class="btn btn-primary" onclick="submitTicketingForm()">Simpan Ticketing</button>
            </div>
        </div>
    </div>

    <audio id="alertSound" preload="auto">
        <source src="/audio/alert.mp3" type="audio/mpeg">
    </audio>

    <audio id="succesSound" preload="auto">
        <source src="/audio/success.mp3" type="audio/mpeg">
    </audio>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.32/sweetalert2.min.js"></script>
    <script src="/js/header-common.js"></script>
    <script src="/js/dashboard.js"></script>
    <script>
        // Hide Dashboard link on dashboard page (index.ejs is the dashboard page)
        // Note: Dashboard link points to /divisions, but index.ejs is the main dashboard
        // So we don't need to hide anything here since there's no link to / (index) in the nav
    </script>
</body>
</html>