<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Divisions & Lines - Andon Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/divisions.css">
</head>
<body class="<%= user.role === 'manager' ? 'manager-view' : (['admin', 'management', 'maintenance', 'quality', 'engineering'].includes(user.role) ? 'admin-view' : '') %>">
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <img src="/image/Logo sanoh 2 2.png" alt="Sanoh Logo" class="logo-img">
                    <h1 class="dashboard-title">Andon Dashboard</h1>
                </div>
                <div class="status-info">
                    <div class="top-row-info"> 
                        <div class="user-info">
                            <i class="fas fa-user"></i>
                            <span><%= user.name %></span>
                        </div>
                        <div class="nav-links"> 
                            <% if (user.role === 'admin' || user.role === 'management') { %>
                                <a href="/divisions" class="analytics-link" title="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                                <a href="/plc-monitoring" class="analytics-link" title="PLC">
                                    <i class="fas fa-network-wired"></i>
                                    <span>PLC</span>
                                </a>
                                <a href="/users" class="analytics-link" title="Users">
                                    <i class="fas fa-users-cog"></i>
                                    <span>Users</span>
                                </a>
                                <a href="/manage-lines" class="analytics-link" title="Lines">
                                    <i class="fas fa-sitemap"></i>
                                    <span>Lines</span>
                                </a>
                                <a href="/inspect-tables" class="analytics-link" title="Tables">
                                    <i class="fas fa-table"></i>
                                    <span>Tables</span>
                                </a>
                            <% } else if (user.role === 'manager') { %>
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                            <% } else if (['maintenance', 'quality', 'engineering'].includes(user.role)) { %>
                                <a href="/analytics" class="analytics-link" title="Analytics">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Analytics</span>
                                </a>
                            <% } %>
                        </div>
                        <form method="POST" action="/logout" style="display: inline;">
                            <button type="submit" class="logout-btn" title="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </div>
                    <div class="bottom-row-status">
                        <div class="connection-status" id="connectionStatus">
                            <i class="fas fa-wifi"></i>
                            <span>Connected</span>
                        </div>
                        <div class="current-time">
                            <span id="currentTime">--:--:--</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="dashboard-main">
        <div class="container">
            <div class="divisions-container" id="divisionsContainer">
                <div class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Memuat data divisi dan line...</p>
                </div>
            </div>
        </div>
    </main>

    <div id="userData" data-role="<%= user.role %>" data-line="<%= user.line_name || '' %>" data-division="<%= user.division || '' %>" style="display: none;"></div>

    <audio id="alertSound" preload="auto">
        <source src="/audio/alert.mp3" type="audio/mpeg">
    </audio>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/header-common.js"></script>
    <script src="/js/divisions.js"></script>
    <script>
        // Hide Dashboard link on divisions page
        document.querySelectorAll('.analytics-link[href="/divisions"]').forEach(link => {
            link.style.display = 'none';
        });
    </script>
</body>
</html>

