<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/analytics-tables.css">
</head>
<body>
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <img src="/image/Logo sanoh 2 2.png" alt="Sanoh Logo" class="logo-img">
                    <h1 class="dashboard-title">Andon Dashboard</h1>
                </div>
                <div class="status-info">
                    <div class="top-row-info">
                        <div class="user-info">
                            <i class="fas fa-user"></i>
                            <span><%= user.name %></span>
                        </div>
                        <div class="nav-links"> 
                            <% if (user.role === 'admin' || user.role === 'management') { %>
                                <a href="/divisions" class="analytics-link" title="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                                <a href="/plc-monitoring" class="analytics-link" title="PLC">
                                    <i class="fas fa-network-wired"></i>
                                    <span>PLC</span>
                                </a>
                                <a href="/users" class="analytics-link" title="Users">
                                    <i class="fas fa-users-cog"></i>
                                    <span>Users</span>
                                </a>
                                <a href="/manage-lines" class="analytics-link" title="Lines">
                                    <i class="fas fa-sitemap"></i>
                                    <span>Lines</span>
                                </a>
                                <a href="/inspect-tables" class="analytics-link" title="Tables">
                                    <i class="fas fa-table"></i>
                                    <span>Tables</span>
                                </a>
                            <% } else if (user.role === 'manager') { %>
                                <a href="/divisions" class="analytics-link" title="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                            <% } else if (['maintenance', 'quality', 'engineering'].includes(user.role)) { %>
                                <a href="/divisions" class="analytics-link" title="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                            <% } %>
                        </div>
                        <form method="POST" action="/logout" style="display: inline;">
                            <button type="submit" class="logout-btn" title="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </div>
                    <div class="bottom-row-status">
                        <div class="connection-status" id="connectionStatus">
                            <i class="fas fa-wifi"></i>
                            <span>Connected</span>
                        </div>
                        <div class="current-time">
                            <span id="currentTime">--:--:--</span>
                        </div>
                    </div>
                </div>
            </div>    
        </div>
    </header>

    <main class="dashboard-main">
        <div class="container">

            <div class="page-header">
                <h2>Analytics Dashboard</h2>
                <input type="text" id="date-range-picker" placeholder="Pilih Rentang Tanggal" />
            </div>

            <% if (['admin', 'management'].includes(user.role)) { %>
            <div class="stats-section">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-exclamation-circle"></i></div>
                    <div class="stat-info">
                        <div class="stat-number" id="kpi-total-problems">...</div>
                        <div class="stat-label">Total Masalah</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon warning"><i class="fas fa-clock"></i></div>
                    <div class="stat-info">
                        <div class="stat-number" id="kpi-total-downtime">...</div>
                        <div class="stat-label">Total Waktu Henti</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon success"><i class="fas fa-tools"></i></div>
                    <div class="stat-info">
                        <div class="stat-number" id="kpi-mttr">...</div>
                        <div class="stat-label">Rata-rata Resolusi (MTTR)</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon critical"><i class="fas fa-industry"></i></div>
                    <div class="stat-info">
                        <div class="stat-number" id="kpi-worst-machine">...</div>
                        <div class="stat-label">Mesin Paling Bermasalah</div>
                    </div>
                </div>
            </div>

            <div class="charts-section">
                <div class="chart-card quantity-chart-card">
                    <div class="chart-card-header">
                        <h3>Perbandingan Quantity Target vs Aktual</h3>
                        <div class="chart-controls">
                            <label for="divisionQuantitySelect">Pilih Divisi</label>
                            <select id="divisionQuantitySelect" class="line-select">
                                <option value="">Memuat data...</option>
                            </select>
                        </div>
                    </div>
                    <div id="quantityChartsContainer">
                        <!-- Charts akan ditambahkan secara dinamis per line -->
                    </div>
                        <div class="chart-empty-state" id="lineQuantityEmptyState" style="display: none;">
                            <i class="fas fa-database"></i>
                        <p>Belum ada data produksi untuk divisi ini.</p>
                    </div>
                </div>
                <div class="chart-card">
                    <h3>Frekuensi Masalah per Mesin</h3>
                    <div class="chart-wrapper">
                        <canvas id="frequencyChart"></canvas>
                    </div>
                </div>
                <div class="chart-card">
                    <h3>Waktu Henti per Mesin (Downtime)</h3>
                    <div class="chart-wrapper">
                        <canvas id="downtimeChart"></canvas>
                    </div>
                </div>
                <div class="chart-card">
                    <h3>Distribusi Tipe Masalah</h3>
                    <div class="chart-wrapper">
                        <canvas id="problemTypeChart"></canvas>
                    </div>
                </div>
                <div class="chart-card">
                    <h3>MTTR per Tipe Masalah</h3>
                    <div class="chart-wrapper">
                        <canvas id="mttrChart"></canvas>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Detailed Forward Problem Analytics Table Section -->
            <% if (['admin', 'management', 'maintenance', 'quality', 'engineering'].includes(user.role)) { %>
            <div class="detailed-forward-analytics-section">
                <h3>Data Detail Forward Problem Resolution</h3>
                <div class="table-actions">
                    <button class="btn btn-primary" id="export-excel-forward-btn">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </button>
                    <button class="btn btn-secondary" id="refresh-forward-table-btn">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                    <input type="text" class="search-box" id="forward-table-search" placeholder="Cari problem ID, mesin, atau tipe...">
                    <div class="page-size-control">
                        <label for="forward-table-page-size">Tampilkan</label>
                        <select id="forward-table-page-size">
                            <option value="10" selected>10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        <span>data</span>
                    </div>
                </div>
                <div class="forward-analytics-table-container">
                    <table class="forward-analytics-table" id="forward-analytics-table">
                        <thead>
                            <tr>
                                <th class="sortable" data-column="problem_id">
                                    Problem ID <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="machine">
                                    Mesin <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="problem_type">
                                    Tipe Problem <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="flow_type">
                                    Flow Type <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="active_at">
                                    Active At <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="forwarded_at">
                                    Forwarded At <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="received_at">
                                    Received At <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="feedback_at">
                                    Feedback At <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="resolved_at">
                                    Resolved At <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="active_to_forward">
                                    Active → Forward <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="forward_to_receive">
                                    Forward → Receive <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="receive_to_feedback">
                                    Receive → Feedback <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="feedback_to_final">
                                    Feedback → Final <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="total_duration">
                                    Total Duration <i class="fas fa-sort"></i>
                                </th>
                                <th>Users</th>
                            </tr>
                        </thead>
                        <tbody id="forward-analytics-table-body">
                            <!-- Data akan diisi oleh JavaScript -->
                        </tbody>
                    </table>
                </div>
                <div class="empty-state" id="forward-table-empty-state" style="display: none;">
                    <i class="fas fa-table"></i>
                    <h4>Tidak ada data</h4>
                    <p>Pilih rentang tanggal untuk melihat data detail forward problem resolution.</p>
                </div>
            </div>
            <% } %>

            <!-- Ticketing Problem Analytics Table Section -->
            <% if (['admin', 'management', 'maintenance', 'quality', 'engineering'].includes(user.role)) { %>
            <div class="ticketing-analytics-section">
                <h3>Data Ticketing Problem</h3>
                <div class="table-actions">
                    <button class="btn btn-primary" id="export-excel-ticketing-btn">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </button>
                    <button class="btn btn-secondary" id="refresh-ticketing-table-btn">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                    <input type="text" class="search-box" id="ticketing-table-search" placeholder="Cari ticketing ID, mesin, atau teknisi...">
                    <div class="page-size-control">
                        <label for="ticketing-table-page-size">Tampilkan</label>
                        <select id="ticketing-table-page-size">
                            <option value="10" selected>10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        <span>data</span>
                    </div>
                </div>
                <div class="ticketing-analytics-table-container">
                    <table class="ticketing-analytics-table" id="ticketing-analytics-table">
                        <thead>
                            <tr>
                                <th class="sortable" data-column="id">
                                    Ticketing ID <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="problem_id">
                                    Problem ID <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="machine">
                                    Mesin <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="problem_type">
                                    Tipe Problem <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="pic_technician">
                                    PIC/Teknisi <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="status">
                                    Status <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="problem_received_at">
                                    Problem Received <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="diagnosis_started_at">
                                    Diagnosis Started <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="repair_started_at">
                                    Repair Started <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="repair_completed_at">
                                    Repair Completed <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="downtime">
                                    Downtime <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="mttr">
                                    MTTR <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="mttd">
                                    MTTD <i class="fas fa-sort"></i>
                                </th>
                                <th class="sortable" data-column="created_at">
                                    Created At <i class="fas fa-sort"></i>
                                </th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody id="ticketing-analytics-table-body">
                            <!-- Data akan diisi oleh JavaScript -->
                        </tbody>
                    </table>
                </div>
                <div class="empty-state" id="ticketing-table-empty-state" style="display: none;">
                    <i class="fas fa-table"></i>
                    <h4>Tidak ada data</h4>
                    <p>Pilih rentang tanggal untuk melihat data ticketing problem.</p>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <!-- Edit Ticketing Modal -->
    <div class="modal" id="editTicketingModal" style="display: none;">
        <div class="modal-content edit-ticketing-modal-content">
            <div class="modal-header">
                <h3>Edit Ticketing Problem</h3>
                <button class="modal-close" onclick="closeEditTicketingModal()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editTicketingForm">
                    <input type="hidden" id="editTicketingId" name="ticketing_id">
                    
                    <div class="form-group">
                        <label for="editDiagnosis">Diagnosa/Analisis Masalah:</label>
                        <textarea id="editDiagnosis" name="diagnosis" rows="6" placeholder="Jelaskan diagnosa atau analisis masalah yang terjadi..." required></textarea>
                    </div>
                    
                    <div class="form-group" style="margin-top: 15px;">
                        <label for="editResultRepair">Result/Perbaikan yang Dilakukan:</label>
                        <textarea id="editResultRepair" name="result_repair" rows="6" placeholder="Jelaskan perbaikan yang telah dilakukan..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeEditTicketingModal()">Batal</button>
                <button class="btn btn-primary" onclick="submitEditTicketingForm()">Simpan Perubahan</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/moment/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <div id="userData" data-role="<%= user.role %>" data-line="<%= user.line_name || '' %>" data-division="<%= user.division || '' %>" style="display: none;"></div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/header-common.js"></script>
    <script src="/js/analytics.js"></script>
    <script>
        // Hide Analytics link on analytics page
        document.querySelectorAll('.analytics-link[href="/analytics"]').forEach(link => {
            link.style.display = 'none';
        });
    </script> 
</body>
</html>